function _init()
	p={}
	p.x = 48
	p.y = 48
	
	enemys={}
	for i=1,5 do
		make_enemy(rnd(128),rnd(128))
	end
end

function _draw()
	cls()
	spr(1,p.x,p.y) --player
	foreach(enemies,draw_enemy)
end

